{
  "version": 3,
  "configurePresets": [
    {
      "name": "generic-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_POLICY_DEFAULT_CMP0091": "NEW",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_STANDARD": "17"
      }
    },
    {
      "name": "clang-cl",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-cl.exe",
        "CMAKE_CXX_COMPILER": "clang-cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64_Debug",
      "displayName": "x64_Debug",
      "inherits": "generic-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64_Release",
      "displayName": "x64_Release",
      "inherits": "generic-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "x64_Debug_xClangCl",
      "displayName": "x64_Debug_xClangCl",
      "inherits": [ "generic-base", "clang-cl" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64_Release_xClangCl",
      "displayName": "x64_Release_xClangCl",
      "inherits": [ "generic-base", "clang-cl" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}
